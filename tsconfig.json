{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,

    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["modules/*"],
      "@cfgs/*": ["configs/*"]
    },

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "pretty": true,

    "typeRoots": ["./types"],
    "types": ["./types/"]
  },

  "include": ["src", "modules", "configs"],
  "exclude": ["node_modules", "types"]
}
